      }
    },
    "header-style": {
      "type": "Select",
      "config": {
        "options": ["Full Width", "No Header", "Narrow"],
        "default_value": "Full Width",
        "label": "Header-Style"
      }
    },
    "show_toc": {
      "type": "Boolean",
      "config": {
        "default_value": false,
        "label": "Show Table of Contents"
      }
    }
  },
